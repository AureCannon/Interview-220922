{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Verbose"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "trace.log",
                "rollOnFileSizeLimit": true,
                "rollingInterval": "Day",
                "retainedFileCountLimit": 2,
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
              }
            }
          ]
        }
      }
    ],
    "Properties": {
      "WebApplication": "ASXListedCompanies"
    }
  },
  "AsxSettings": {
    "ListedSecuritiesCsvUrl": "https://www.asx.com.au/asx/research/ASXListedCompanies.csv"
  },
  "AllowedHosts": "*"
}
